    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.17",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.15.2",
    "drizzle-kit": "^0.31.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "pino-pretty": "^13.0.0",
    "@aws-sdk/client-s3": "^3.817.0",
    "@aws-sdk/s3-request-presigner": "^3.817.0",
