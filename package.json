    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.4.0",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.0",
    "pino": "^9.7.0",
    "sequelize": "^6.37.7",
    "zod": "^3.25.28"
  }
